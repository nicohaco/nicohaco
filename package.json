{
  "name": "NicoHaco",
  "main": "dist/main.js",
  "author": "abouthiroppy <git@about-hiroppy.com http://about-hiroppy.com",
  "version": "0.1.1",
  "license": "MIT",
  "description": "NicoBoxのPC版です",
  "homepage": "",
  "engines": {
    "node": ">= 7.0.0"
  },
  "scripts": {
    "test": "jest --coverage",
    "flow": "flow",
    "lint": "npm run lint:js && npm run lint:css",
    "start": "webpack-dev-server",
    "build": "NODE_ENV=production npm run build:main && NODE_ENV=production npm run build:render",
    "build:main": "webpack --config ./webpack.main.config.js",
    "build:render": "webpack",
    "lint:js": "eslint .",
    "electron": "npm run build:main && electron .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "lint:css": "stylelint src/**/*.css",
    "postinstall": "npm run flow-typed",
    "flow-typed": "flow-typed install",
    "test:watch": "jest --watch --coverage",
    "package:osx": "npm run build && build --mac --x64"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babili-webpack-plugin": "^0.1.1",
    "case-sensitive-paths-webpack-plugin": "^2.0.0",
    "conventional-changelog-cli": "^1.3.1",
    "css-loader": "^0.28.1",
    "dotenv": "^4.0.0",
    "electron": "^1.6.8",
    "electron-builder": "^18.0.1",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-sky": "^1.6.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "flow-bin": "^0.45.0",
    "flow-status-webpack-plugin": "^0.1.7",
    "flow-typed": "^2.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.0",
    "jsdom": "^10.1.0",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^2.0.3",
    "postcss-mixins": "^6.0.0",
    "postcss-reporter": "^3.0.0",
    "postcss-smart-import": "^0.6.13",
    "react-addons-test-utils": "^15.5.1",
    "react-hot-loader": "next",
    "redux-devtools": "^3.4.0",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-sky": "^1.0.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.5.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "convert-keys": "^1.2.0",
    "dexie": "^1.5.1",
    "electron-devtools-installer": "^2.2.0",
    "electron-gh-releases": "^2.0.4",
    "nico-api": "^0.7.4",
    "photon": "https://github.com/connors/photon",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-loading": "^0.1.2",
    "react-modal": "^1.7.7",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-dom": "4.0.0-beta.6",
    "react-router-redux": "next",
    "react-slider": "^0.7.0",
    "redux": "^3.6.0",
    "redux-saga": "^0.15.3"
  },
  "build": {
    "appId": "com.electron.nicohaco",
    "files": [
      "dist",
      "index.html",
      "package.json",
      "build"
    ],
    "mac": {
      "target": "default"
    },
    "directories": {
      "output": "docs"
    }
  }
}
